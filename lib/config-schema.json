{
  "resetAllStyles": {
    "type": "object",
    "title": "Reset to default styles",
    "properties": {
      "reset": {
        "title": "Reset all styles",
        "type": "boolean",
        "default": false
      }
    }
  },
  "background": {
    "order": 1,
    "type": "object",
    "title": "Background",
    "description": "This sets the base background color to use throughout the UI like, tree-view, tab-bar, panels, panes and views.",
    "properties": {
      "color": {
      "order": 1,
      "title": "Text color",
      "type": "color",
      "default": "rgba(179, 179, 179, 1)"
      },
      "value": {
        "order": 2,
        "title": "Color value",
        "type": "number",
        "default": 0,
        "minimum": -100,
        "maximum": 100
      }
    }
  },
  "text": {
    "order": 2,
    "type": "object",
    "title": "Text",
    "description": "This sets the base color for text throughout the UI",
    "properties": {
      "color": {
        "order": 1,
        "title": "Text color",
        "type": "color",
        "default": "rgba(51, 51, 51, 1)"
      },
      "value": {
        "order": 2,
        "title": "Color value",
        "type": "number",
        "default": 0,
        "minimum": -100,
        "maximum": 100
      }
    }
  },
  "heading": {
    "order": 3,
    "type": "object",
    "title": "Headings",
    "description": "This styles all headings throughout the UI",
    "properties": {
      "color": {
        "order": 1,
        "title": "Text color",
        "type": "color",
        "default": "rgba(245, 245, 245, 1)"
      },
      "value": {
        "order": 2,
        "title": "Color value",
        "type": "number",
        "default": 0,
        "minimum": -100,
        "maximum": 100
      }
    }
  },
  "button": {
    "order": 4,
    "type": "object",
    "title": "Button",
    "description": "This is the color applied to most bottons and hover colors.",
    "properties": {
      "color": {
        "order": 1,
        "title": "Text color",
        "type": "color",
        "default": "rgba(0, 255, 102, 1)"
      },
      "value": {
        "order": 2,
        "title": "Color value",
        "type": "number",
        "default": 0,
        "minimum": -100,
        "maximum": 100
      }
    }
  },
  "border": {
    "order": 5,
    "type": "object",
    "title": "Border value",
    "description": "This darkens or lightens borders around elements. Set negative numbers to darken and positive numbers to lighten. Range is -100 through 100",
    "properties": {
      "value": {
        "title": "Border lightness/darkness",
        "type": "number",
        "default": -25,
        "minimum": -100,
        "maximum": 100
      }
    }
  },
  "nav": {
    "order": 6,
    "type": "object",
    "title": "Nav value",
    "description": "This darkens or lightens the tree-view, tab-bar, find-and-replace panel and popup modal backgrounds. Set negative numbers to darken and positive numbers to lighten. Range is -100 through 100",
    "properties": {
      "value": {
        "title": "Tree-view and Tab-bar lightness/darkness",
        "type": "number",
        "default": -30,
        "minimum": -100,
        "maximum": 100
      }
    }
  },
  "findAndReplace": {
    "order": 7,
    "type": "object",
    "title": "Find and replace border color",
    "description": "This sets the border of the rectangle that appears around search terms. Just do a seach real quick to see what I'm talking about.",
    "properties": {
      "borderHighLightColor": {
        "order": 1,
        "title": "Border highlight color",
        "type": "color",
        "default": "rgba(255, 255, 255, 1)"
      },
      "borderHighLightColorCurrent": {
        "order": 2,
        "title": "Border highlight color - current selected term",
        "type": "color",
        "default": "rgba(0, 255, 102, 1)"
      }
    }
  },
  "git": {
    "order": 8,
    "type": "object",
    "title": "Special colors",
    "description": "This sets color used for git status and miscellaneous messaging.",
    "properties": {
      "infoColor": {
        "order": 1,
        "title": "Info highlight color",
        "type": "color",
        "default": "rgba(0, 170, 255, 1)"
      },
      "successColor": {
        "order": 2,
        "title": "New / Success color",
        "type": "color",
        "default": "rgba(0, 255, 102, 1)"
      },
      "warningColor": {
        "order": 3,
        "title": "Modified / Warning color",
        "type": "color",
        "default": "rgba(255, 213, 0, 1)"
      },
      "errorColor": {
        "order": 4,
        "title": "Removed / Error color",
        "type": "color",
        "default": "hsla(0, 100%, 50%, 1)"
      }
    }
  },
  "settingsBackground": {
    "order": 9,
    "type": "object",
    "title": "Settings page background style",
    "description": "This styles the background on all settings pages. Press command + , to see the settings page.",
    "properties": {
      "style": {
        "order": 1,
        "title": "Solid, dotted, pinstriped or triangle patternd backgound",
        "type": "string",
        "enum": ["solid", "dot", "pinstripe", "triangle"],
        "default": "solid"
      }
    }
  }
}
